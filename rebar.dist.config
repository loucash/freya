{deps, [
        {lager, ".*", {git, "https://github.com/basho/lager.git", {tag, "2.0.3"}}}
]}.

{cover_enabled, true}.

{clean_files, ["test/*.beam"]}.

{ct_extra_params, "-boot start_sasl -pa ebin -pa deps/*/ebin"}.

{erl_opts,
 [
  debug_info,
  warn_unused_vars,
  warn_shadow_vars,
  warn_unused_import,
  {parse_transform, lager_transform},
  {lager_truncation_size, 4096},
  {d, 'TEST'},
  {src_dirs, ['dist-tests']},
  {outdir, "dist-tests"}
 ]}.
